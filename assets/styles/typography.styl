$base-heading-font-family = 'IBM Plex Sans', Helvetica, Arial, sans-serif
$base-heading-font-family-serif = 'IBM Plex Serif', Garamond, serif
$base-body-font-family= 'IBM Plex Sans', Helvetica, Arial, sans-serif
$base-heading-font-weight = 300
$base-line-height= 1.5em
$text-color = #323132
// $base-font-weight: normal;
// $base-font-size-em: 1em;
// $base-font-size-px: 16px;
// $base-line-height: 1.4;

// $heading-font-weight: bold;
// $body-font-weight: 100;

body, h1, h2, h3, h4, h5, h6
  font-family: $base-heading-font-family
  font-weight: $base-heading-font-weight
  color: $text-color 
  line-height: $base-line-height

h1, h2, h3, h4, h5, h6 {
  margin-bottom: 20px;
}

h1 
  font-size: 2.369em
  font-weight: $base-heading-font-weight

h2 
  font-size: 1.777em

h3
  font-size: 1.333em

