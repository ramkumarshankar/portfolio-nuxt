h1.page-headline 
  font-family: $base-heading-font-family-serif
  font-weight: 300

p, input, textarea
  font-family: $base-body-font-family
  color: $text-color
  line-height: $base-line-height
  font-size: 1.125em
  margin-bottom: 20px

ul
  font-family: $base-body-font-family 
  color: $text-color
  line-height: $base-line-height
  list-style-type: circle
  font-size: 1.125em

li
  list-style: disc inside

span
  font-family: $base-body-font-family

button, a
  color: $link-color
  font-family: $base-body-font-family
