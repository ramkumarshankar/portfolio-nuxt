@import './colors.styl'

$button-font-size = 1.125em

button {
  font-size: $button-font-size;
  padding: 10px 25px;
  border-radius: 2px;

  &.primary {
    background: $button-color;
    border: 2px solid $button-color;
    border-radius: 2px
    transition: all 0.2s
    color: #FFF
    font-weight: 700

    &.min-width {
      min-width: 220px;
    }

    &:hover {
      background: darken($button-color, 20)
    }
  }

  &.secondary {
    background: linear-gradient(to left, transparent 50%, $button-color 50%);
    background-size: 200% 100%;
    background-position:right bottom;
    border: 2px solid $button-color
    transition: all 0.2s
    font-weight: 700

    &:hover {
      background-position:left bottom;
      color: #FFF
    }
  }


  &.outline {
    color: $default-gray;
    background: transparent;
    border: 2px solid $default-gray;
    overflow: hidden;
    position: relative;

    &.min-width {
      min-width: 220px;
    }
    
    * {
      z-index: 20;
    }
    
    &:after {
      background: $site-blue;
      content: "";
      height: 155px;
      left: -75px;
      opacity: .2;
      position: absolute;
      top: -50px;
      transform: rotate(35deg);
      transition: all 550ms cubic-bezier(0.19, 1, 0.22, 1);
      width: 50px;
      z-index: -10;
    }

    &:hover {
  
      &:after {
        left: 120%;
        transition: all 550ms cubic-bezier(0.19, 1, 0.22, 1);
      }
    }
  }
}