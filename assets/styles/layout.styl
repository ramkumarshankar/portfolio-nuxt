@import 'typography.styl'

.container 
  padding-left: 6em;
  padding-right: 6em;
  max-width: 1024px;
  margin: auto

  @media screen and (max-width: 800px)
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    width: 100% !important;

.page-heading-section {
  width: 70%;
  text-align: center;
  margin: 80px auto 60px auto;

  h1 {
    font-family: $base-heading-font-family-serif;
  }

  @media screen and (max-width: 800px) {
    width: auto;
  }
}

.article-page {
  h1 {
    margin-bottom: 0px;
    line-height: 1.3em;
  }
  p.summary {
    font-style: italic;
    margin-bottom: 30px;
  }

  img {
    width: 100%;
    object-fit: cover;
  }

  div[data-oembed] {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%;
    margin-bottom: 20px;

    iframe, object, embed {
      position: absolute;
      top: 0;
      left: 0;
      width: 100% !important;
      height: 100% !important;
    }
  }
  pre {
    white-space: pre-line;
    margin-bottom: 20px;

    code {
      font-family: $base-mono-font-family;

      * {
        font-family: $base-mono-font-family;
      }
    }
  }
}